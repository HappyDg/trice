{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/id",
            "args": [
                "-test.run",
                "TestUpdateSameId"
            ]
        },
        {
            "name": "Launch trice displayServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["ds",
                    "-lg",
                    "${workspaceFolder}/pkg/disp/testdata/serverMutexTest.log"
            ]
        },
        {
            "name": "Launch trice shutdownRemoteDisplayServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["sd"
            ]
        },
        {
            "name": "TestRNDChaosX",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                "-idlist", "${workspaceFolder}/test/til.json",
                "-source", "RND",
                "-rndLimit", "10", 
                "-rndMode", "ChaosMode",
                "-color", "off", 
                "-ts", "none",
                "-key", "none"
            ]
        },              
        {
            "name": "-p JLINK",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-port",
                     "JLINK",
                     "-args",
                     "\"-Device STM32F030R8 -if SWD -speed 4000 -RTTChannel 0 -RTTSearchRanges 0x20000000_0x1000\"",
                     "-verbose",
                     "-encoding",
                     "packl",
                     "-idlist",
                     "${workspaceFolder}/til.json"
            ]
        },
        {
            "name": "-s wrapTriceMsgs.bin",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-s",
                     "C:\\repos\\trice\\internal\\receiver\\rttfile\\testdata\\wrapTriceMsgs.bin",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-key",
                     "none"
            ]
        },        
        {
            "name": "-password MySecret",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-p",
                     "COM16",
                     "-debug",
                     "-password",
                     "MySecret",
                     "-idlist",
                     "${workspaceFolder}/til.json"
            ]
        },
        {
            "name": "trice l -p BUFFER",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-v",
                     "-encoding",
                     "flexL",
                     "-port",
                     "BUFFER",
                     "-args",
                     "2, 124, 227, 255, 0, 0, 4, 0",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-password",
                     ""
            ]
        },       
        {
            "name": "displayServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["l",
                     "-ds",
                     "-a",
                     "-port",
                     "COM4",
                     "-baud",
                     "115200",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-password",
                     "none"
            ]
        },
        {
            "name": "check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["check",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-color",
                     "xxxxxxxxxxalternate",
                     "-v",
                     "-dataset",
                     "xxx"
            ]
        },
        {
            "name": "help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["help"
            ]
        },
        {
            "name": "zeroSourceTreeIds",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["zeroSourceTreeIds",
                     "-src",
                     "C:/repos/trice/srcTrice.C/tCopy.c",
                     "-dry-run"
            ]
        },
        {
            "name": "l -e DUMP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                    "-til",
                    "${workspaceFolder}/til.json",
                     "-p",
                     "COM5",
                     "-baud",
                     "57600",
                     "-e",
                     "DUMP"
            ]
        },
        {
            "name": "l -p COM6 -testTable",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                    "-til",
                    "${workspaceFolder}/til.json",
                     "-p",
                     "COM6",
                     "-ttsf",
                     "",
                     "-testTable"
            ]
        },        
        {
            "name": "l -p COM5",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                    "-til",
                    "${workspaceFolder}/til.json",
                     "-p",
                     "COM5"
            ]
        },        
        {
            "name": "update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["update",
                    "-v",
                    "-src",
                    "C:/repos/trice/srcTrice.C",
                    "-src",
                    "C:/repos/trice/test/MDK-ARM_LL_UART_RTT0_PACK_STM32F030R8-NUCLEO-64",
                    "-IDMethod",
                    "random",
                    "-idlist",
                    "${workspaceFolder}/til.json"
            ]
        }
    ]
}