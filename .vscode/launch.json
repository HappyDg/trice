    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/id",
            "args": [
                "-test.run",
                "TestUpdateSameId"
            ]
        },
        {
            "name": "Launch trice help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["help"
            ]
        },
        {
            "name": "Launch trice log -port",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-port",
                     "COM26",
                     "-baud",
                     "38400",
                     "-list",
                     "C:/GitRepos/GoT/trice/til.json"
            ]
        },
        {
            "name": "Launch trice check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["check",
                     "-list",
                     "C:/GitRepos/GoT/trice/til.json"
            ]
        },
        {
            "name": "Launch trice update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["update",
                    "-src",
                    "C:/GitRepos/GoT/trice/srcC/traceLogCheck.c"
            ]
        }
    ]
}