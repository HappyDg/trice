    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/id",
            "args": [
                "-test.run",
                "TestUpdateSameId"
            ]
        },
        {
            "name": "Launch trice displayServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["ds",
                    "-lg",
                    "${workspaceFolder}/pkg/disp/testdata/serverMutexTest.log"
            ]
        },
        {
            "name": "Launch trice shutdownRemoteDisplayServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["sd",
            ]
        },
        {
            "name": "TestRNDChaosX",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                "-idlist", "${workspaceFolder}/test/til.json",
                "-source", "RND",
                "-rndLimit", "10", 
                "-rndMode", "ChaosMode",
                "-color", "off", 
                "-ts", "none",
                "-key", "none",
            ]
        },              
        {
            "name": "-p JLINK",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-port",
                     "JLINK",
                     "-verbose"
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-key",
                     "none",
            ]
        },
        {
            "name": "-s RND",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-source",
                     "RND",
                     "-rndLimit",
                     "5",
                     "-rndMode"
                     "BareModeNoSync"
                     "-idlist",
                     "${workspaceFolder}/test/til.json",
                     "-key",
                     "none"
            ]
        },
        {
            "name": "-s wrapTriceMsgs.bin",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-s",
                     "C:\\repos\\trice\\internal\\receiver\\rttfile\\testdata\\wrapTriceMsgs.bin",
                     "-idlist",
                     "${workspaceFolder}/test/til.json",
                     "-key",
                     "none"
            ]
        },        
        {
            "name": "-device SIM",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-s",
                     "DUMMY",
                     "-e",
                     "sim",
                     "-idlist",
                     "${workspaceFolder}/test/til.json",
                     "-key",
                     "none"
            ]
        },
        {
            "name": "Launch trice log -port",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-port",
                     "COM7",
                     "-baud",
                     "115200",
                     "-idlist",
                     "${workspaceFolder}/test/til.json",
                     "-key",
                     "none"
            ]
        },       
        {
            "name": "trice l -g COM3",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["log",
                     "-verbose",
                     "-encoding",
                     "esc",
                     "-port",
                     "COM3",
                     "-baud",
                     "115200",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-key",
                     "none"
            ]
        },       
        {
            "name": "remoteDisplay",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["remoteDisplay",
                     "-port",
                     "COM38",
                     "-baud",
                     "115200",
                     "-idlist",
                     "${workspaceFolder}/til.json",
                     "-key",
                     "none"
            ]
        },
        {
            "name": "check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["check",
                     "-idlist",
                     "${workspaceFolder}/test/til.json",
                     "-color",
                     "xxxxxxxxxxalternate",
                     "-v"
                     "-dataset",
                     "xxx"
            ]
        },
        {
            "name": "update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/trice",
            "env": {},
            "args": ["update",
                    "-v",
                    "-src",
                    "C:/repos/BTdev/STM32",
                    "-idlist",
                    "c:/repos/BTdev/til.json"
            ]
        }
    ]
}